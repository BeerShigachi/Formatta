{
    "name": "formatta",
    "displayName": "Formatta",
    "publisher": "BeerShigachi",
    "description": "Toggle VS Code format-on-save using a Haskell CLI backend.",
    "version": "0.0.2",
    "license": "MIT",
    "engines": {
        "vscode": "^1.70.0"
    },
    "categories": [
        "Other",
        "Formatters"
    ],
    "repository": {
        "type": "git",
        "url": "https://github.com/BeerShigachi/Formatta.git"
    },
    "main": "./out/extension.js",
    "contributes": {
        "commands": [
            {
                "command": "formatta.toggleFormatOnSave",
                "title": "Toggle Format On Save"
            }
        ]
    },
    "activationEvents": [
        "*"
    ],
    "scripts": {
        "vscode:prepublish": "npm run compile",
        "compile": "tsc -p ./",
        "watch": "tsc -watch -p ./",
        "format": "prettier --write \"src/**/*.ts\"",
        "sync-docs": "cp ../README.md ../CHANGELOG.md ../LICENSE .",
        "package": "npm run sync-docs && vsce package --allow-star-activation"
    },
    "devDependencies": {
        "@types/node": "^20.19.9",
        "@types/vscode": "^1.70.0",
        "prettier": "^3.6.2",
        "typescript": "^5.0.0"
    }
}